<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site">
	<name>Mobile Style</name>
	<creationDate>25.06.2013</creationDate>
	<author>Altalab</author>
	<authorEmail>nguyendat.vn@gmail.com</authorEmail>
	<authorUrl>http://www.Altalab.vn</authorUrl>
	<copyright>Copyright (C) 2012 Altalab, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>2.5</version>
	<description>TPL_ALTALAB_XML_DESCRIPTION</description>

	<files>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>javascript</folder>
		<folder>fonts</folder>
		<folder>language</folder>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>error.php</filename>
		<filename>navigate.php</filename>
	</files>

	<positions>
		<position>debug</position>
		<position>left</position>
		<position>right</position>
		<position>topmenu</position>
		<position>footer</position>
		<position>breadcrumb</position>
		
		<position>position-0</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
	</positions>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_altalab.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_altalab.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="mainwidth"  class="" type="text" default="1000px"
					label="TPL_ALTALAB_FIELD_MAINWIDTH_LABEL"
					description="TPL_ALTALAB_FIELD_MAINWIDTH_DESC"
					filter="string" />
				
				<field name="pagewapper"  class="" type="text" default="1000px"
					label="TPL_ALTALAB_FIELD_PAGEWAPPER_LABEL"
					description="TPL_ALTALAB_FIELD_PAGEWAPPER_DESC"
					filter="string" />
					
				<field name="leftwidth"  class="" type="text" default="200px"
					label="TPL_ALTALAB_FIELD_LEFTWIDTH_LABEL"
					description="TPL_ALTALAB_FIELD_LEFTWIDTH_DESC"
					filter="string" />
				<field name="rightwidth"  class="" type="text" default="200px"
					label="TPL_ALTALAB_FIELD_RIGHTWIDTH_LABEL"
					description="TPL_ALTALAB_FIELD_RIGHTWIDTH_DESC"
					filter="string" />
				<field name="logo" type="media"
					label="TPL_ALTALAB_FIELD_LOGO_LABEL" description="TPL_ALTALAB_FIELD_LOGO_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
